{
  "compiler_path": "x86_64-w64-mingw32-g++",
  "compiler_std": "c++20",
  "headers_path": ["../", "../zka"],
  "sources_path": ["src/*.cxx"],
  "output_name": "pdm.sys",
  "compiler_flags": [
    "-fPIC",
    "-ffreestanding",
    "-shared",
    "-fno-rtti",
    "-fno-exceptions",
    "-Wl,--subsystem=17"
  ],
  "cpp_macros": [
    "__PDM_IMPL__",
    "__NEWOSKRNL__",
    "__ZKA_AMD64__",
    "cPDMVersion=0x0100",
    "cPDMVersionHighest=0x0100",
    "cPDMVersionLowest=0x0100"
  ]
}
